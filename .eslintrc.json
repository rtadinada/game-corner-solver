{
    "ignorePatterns": ["dist/"],
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["simple-import-sort"],
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "simple-import-sort/imports": "error"
    }
}
